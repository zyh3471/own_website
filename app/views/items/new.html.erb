<h1>Add your itme</h1>
<%= simple_form_for @item, url: items_path do |f| %>
    <%= f.input :title %>
    <%= f.input :status %>
    <%= f.input :description %>
    <%= f.input :market_price %>
    <%= f.input :used_price %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>